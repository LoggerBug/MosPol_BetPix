<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screen.watchteam.Atacker">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/therd_bg"
        android:scaleType="centerCrop"
        />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:src="@drawable/logo"/>

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/menu"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LATERAIS"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/logo"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20sp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_above="@id/back"
        android:layout_centerHorizontal="true"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/atacantes1"/>

            <ImageView
                android:layout_width="150dp"
                android:layout_height="70dp"
                android:src="@drawable/border_name"
                android:layout_marginStart="10dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GIOVANE"
                android:layout_gravity="center"
                android:layout_marginTop="-45dp"
                android:textColor="@color/black"
                android:textSize="17sp"/>


            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/atacantes3"
                android:layout_marginTop="30dp"/>

            <ImageView
                android:layout_width="150dp"
                android:layout_height="70dp"
                android:src="@drawable/border_name"
                android:layout_marginStart="10dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ROMERO"
                android:layout_gravity="center"
                android:layout_marginTop="-45dp"
                android:textColor="@color/black"
                android:textSize="17sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:orientation="vertical">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/atacantes2"/>

            <ImageView
                android:layout_width="150dp"
                android:layout_height="70dp"
                android:src="@drawable/border_name"
                android:layout_marginStart="10dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GUSTAVO SILVA"
                android:layout_gravity="center"
                android:layout_marginTop="-45dp"
                android:layout_marginStart="5dp"
                android:textColor="@color/black"
                android:textSize="17sp"/>


            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/atacantes4"
                android:layout_marginTop="30dp"/>

            <ImageView
                android:layout_width="150dp"
                android:layout_height="70dp"
                android:src="@drawable/border_name"
                android:layout_marginStart="10dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GIOVANE"
                android:layout_marginStart="5dp"
                android:layout_gravity="center"
                android:layout_marginTop="-45dp"
                android:textColor="@color/black"
                android:textSize="17sp"/>

        </LinearLayout>


    </LinearLayout>

    <ImageView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/back"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"/>

</RelativeLayout>